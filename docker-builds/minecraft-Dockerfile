# HostMachine Minecraft (Universal Modded)
# Support for Java, Forge, Fabric, Quilt, Paper, etc.
FROM itzg/minecraft-server:latest

# Environment defaults
ENV EULA=TRUE \
    TYPE=PAPER \
    MEMORY=2G \
    VERSION=LATEST \
    ENABLE_RCON=true \
    RCON_PASSWORD=hostmachine \
    RCON_PORT=25575 \
    ONLINE_MODE=TRUE

# Port exposure
EXPOSE 25565 25575

# Data persistence is handled via volume mounts by the Agent
# The 'itzg' image uses /data as the main directory